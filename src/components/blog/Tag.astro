---
import { tagHref } from '@/lib/utils';
const { tag } = Astro.props as { tag: string };
---

<a
  href={tagHref(tag)}
  class="inline-flex items-center rounded-full bg-[var(--surface-2)] px-2.5 py-1 text-xs font-semibold text-[var(--text)] hover:underline"
  aria-label={`Pokaż artykuły z tagiem ${tag}`}
>
  #{tag}
</a>
